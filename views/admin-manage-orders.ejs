<%- include('partials/admin-header.ejs') -%>

<div id="page-content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="text-center">Manage Orders</h1><br>
                <hr>
                
                <h3>Pending Requests for Orders</h3><hr>
               
                <table class=" text-center table table-dark ">
                    <thead>
                        <th>Order ID</th>
                        <th>Customer Username</th>
                        <th>Order Amount</th>
                        <th>Order Date</th>
                        <th>Order Details</th>
                        <th>Order Action</th>
                        <th>Order Status</th>
                    </thead>
                    <tbody>
                        <% data.forEach(element => { %>
                            <% if (element.ORDER_STATUS == 'confirm') { %>
                                <tr>
                                    <td><%= element.ORDER_ID %></td>
                                    <td><%= element.CUSTOMER_NAME %> </td>
                                    <td>Rs. <%= element.ORDER_AMOUNT %> </td>
                                    <td><%= element.ORDER_DATE.getDate() + "-" + String(Number(element.ORDER_DATE.getMonth()+1)) + "-" + element.ORDER_DATE.getFullYear() %> </td>
                                    <td>
                                        <a href="/admin/manage-orders/<%= element.ORDER_ID %>/<%= element.CUSTOMER_NAME %>  " class="btn btn-sm btn-primary">Click to View Details</a>
                                    </td>
                                    <td>
                                        <form action="/admin/mark-as-complete/<%= element.ORDER_ID %>" method="POST">
                                            <input type="checkbox" onchange="this.form.submit()">
                                        </form>
                                    </td>
                                    <td><%= element.ORDER_STATUS %> </td>
                                </tr>
                            <% } %>
                        <% }) %>
                    </tbody>
                </table><br>
                <h3>Confirmed Orders</h3>
                <hr>
                
                <table class="text-center table  table-dark">
                    <thead>
                        <th>Order ID</th>
                        <th>Customer Username</th>
                        <th>Order Amount</th>
                        <th>Order Date</th>
                        <th>Order Details</th>
                        <th>Order Action</th>
                        <th>Order Status</th>
                    </thead>
                    <tbody>
                        <% data.forEach(element => { %>
                            <% if (element.ORDER_STATUS == 'completed') { %>
                                <tr>
                                    <td><%= element.ORDER_ID %></td>
                                    <td><%= element.CUSTOMER_NAME %> </td>
                                    <td>Rs. <%= element.ORDER_AMOUNT %> </td>
                                    <td><%= element.ORDER_DATE.getDate() + "-" + String(Number(element.ORDER_DATE.getMonth()+1)) + "-" + element.ORDER_DATE.getFullYear() %> </td>
                                    <td>
                                        <a href="/admin/manage-orders/<%= element.ORDER_ID %>/<%= element.CUSTOMER_NAME %>  " class="btn btn-sm btn-primary">Click to View Details</a>
                                    </td>
                                    <td>
                                        <form action="/admin/mark-as-incomplete/<%= element.ORDER_ID %>" method="POST">
                                            <input type="checkbox" onchange="this.form.submit()">
                                        </form>
                                    </td>
                                    <td><%= element.ORDER_STATUS %> </td>
                                </tr>
                            <% } %>
                        <% }) %>
                    </tbody>
                </table> 
                <!-- <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a> -->
            </div>
        </div>
    </div>
</div>
<!-- /#page-content-wrapper -->

</div>
