<%- include('partials/header-seller.ejs') -%> 
<div id="page-content-wrapper">
    <div class="container">
        <!-- <div class="row"> <h1 class="text-center">Simple Sidebar</h1> -->
            <div class="col-lg">
               
                <div class="container-fluid">
                    <br>
                    <div class="form-group">
                        <form method="POST">
                            <h1 class="">ADD NEW PRODUCT</h1><hr>
                            <div >
                                
                            <label>Product Name</label>
                            <input type="text" name="productName" class="form-control" required>
                
                            <label>Product Description</label>
                            <textarea name="productDescription" class="form-control" required></textarea>
                
                            <label>Product Type</label>
                            <select name="productType" class="form-control" required>
                                <option value="console">Gaming Console</option>
                                <option value="cd">Gaming CD</option>
                            </select>
                
                            <label>Product Price</label>
                            <input type="number" name="productPrice" class="form-control" required>
                
                            <label>Allow Bidding</label>
                            <select name="productPriceType" class="form-control" required>
                                <option value="fixed price">Fixed Price</option>
                                <option value="bidding price">Biding</option>
                            </select>            
                
                            <label>Posted by</label>
                            <input type="text" name="productPostedBy" class="form-control" value="<%= loginID %>" readonly>
                
                            <br>
                            <div class="text-center">
                                <button class="btn btn-outline-primary btn-lg" type="submit" id="btn" data-toggle="modal" data-target="#myModal">Submit Request To Add Product</button>
                                 <!-- Modal -->
                               

                            </div>
                            </div>
                        </form>
                    </div>
                </div>
                <br><br><br>
                <!-- <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a> -->
            </div>
        </div>
    </div>
</div>

<script>
    $('document').ready(function() {
           $('#btn').click(function(){
               alert('Product has been posted.Thank you.')
           })
       })           
</script>
