<%- include('partials/admin-header.ejs') -%> 

<div id="page-content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg">
               
<!-- <div class="container"> -->
    <br>
    <h1 class="text-center">Manage Complaints</h1>
    <hr>
    <br>
    <h3 class="">Active Complaints</h3>
    <hr>
    <table class="table table-dark">
        <thead>
            <th>Order Id</th>
            <th>Customer Name</th>
            <th>Complaint Message</th>
            <th>Customer Phone Number</th>
            <th>Customer Email Address</th>
            <th>Action</th>
        </thead>
        <tbody>
            <% data.forEach(element => { %>
                <% if (element.COMPLAINT_STATUS == 'pending') { %>
                    <tr>
                        <td><%= element.ORDER_ID %> </td>
                        <td><%= element.FIRST_NAME %> <%= element.LAST_NAME %> </td>
                        <td><%= element.COMPLAINT_MESSAGE %></td>
                        <td><%= element.PHONE_NUMBER %> </td>
                        <td><%= element.EMAIL_ADDRESS %> </td>
                        <td>
                            <form action="/admin/mark-complaint-as-complete/<%= element.ORDER_ID %>" method="POST">
                                <input type="checkbox" onchange = "this.form.submit()">
                            </form>
                        </td>
                    </tr>
                <% } %>
            <% }) %>
        </tbody>
    </table>

    <br>
    <h3 class="">Resolved Complaints</h3>
    <hr>
    <table class="table  table-dark">
        <thead>
            <th>Order Id</th>
            <th>Customer Name</th>
            <th>Complaint Message</th>
            <th>Customer Phone Number</th>
            <th>Customer Email Address</th>
            <th>Resolved By</th>
            <th>Action</th>
        </thead>
        <tbody>
            <% data.forEach(element => { %>
                <% if (element.COMPLAINT_STATUS == 'resolved') { %>
                    <tr>
                        <td><%= element.ORDER_ID %> </td>
                        <td><%= element.FIRST_NAME %> <%= element.LAST_NAME %> </td>
                        <td><%= element.COMPLAINT_MESSAGE %></td>
                        <td><%= element.PHONE_NUMBER %> </td>
                        <td><%= element.EMAIL_ADDRESS %> </td>
                        <td><%= element.ADMIN_USERNAME %> </td>
                        <td>
                            <form action="/admin/mark-complaint-as-incomplete/<%= element.ORDER_ID %>" method="POST">
                                <input type="checkbox" onchange = "this.form.submit()">
                            </form>
                        </td>
                    </tr>
                <% } %>
            <% }) %>
        </tbody>
    </table>
</div>
                <!-- <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a> -->
            </div>
        </div>
    </div>
</div>

