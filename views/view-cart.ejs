<%- include('partials/header.ejs') -%>


<div id="page-content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="container text-center">
        <table class="table  table-dark">
            <br>
            <h1>YOUR CART</h1>
            <hr>
            <thead>
                <th>Item ID</th>
                <th>Item Name</th>
                <th>Item Price</th>
                <th></th>
                <th>Item Quantity</th>
                <th></th>
                <th>Item Total Price</th>
            </thead>
            <tbody>
                <% data.forEach(element => { %>
                    <tr>
                        <td><%= element.PRODUCT_ID %> </td>
                        <td><%= element.PRODUCT_NAME %> </td>
                        <td>Rs. <%= element.PRODUCT_INDIVIDUAL_PRICE %> </td>
                        <td> <a href="/view-my-cart/decrement-item/<%= element.PRODUCT_ID %>" role="button" class="btn btn-sm"> <i class="fas fa-minus"></i> </a> </td>
                        <td><%= element.PRODUCT_QUANTITY %> </td>
                        <td> <a href="/view-my-cart/increment-item/<%= element.PRODUCT_ID %>" role="button" class="btn btn-sm"> <i class="fas fa-plus"></i> </a> </td>
                        <td>Rs. <%= element.PRODUCT_TOTAL_PRICE %> </td>
                    </tr>
                <% }) %>
            </tbody>
            
        </table>
        <h4>Your Total Bill is: <%= totalBill %> </h4>
        <br>
        <% if (data.length > 0) { %>
            <!-- <form action="/proceed-to-checkout" method="POST">
                <div class="text-center">
                    <button class="btn btn-lg btn-outline-success" type="submit">Proceed To Checkout</button>
                </div>
            </form> -->
            <a href="/proceed-to-checkout" class="btn btn-lg btn-outline-success" role="button">Proceed To Checkout</a>
        <% } %>
    </div>
                <!-- <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a> -->
            </div>
        </div>
    </div>
</div>
