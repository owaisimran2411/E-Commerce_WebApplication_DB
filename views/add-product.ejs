<%- include('partials/admin-header.ejs') -%>

<div id="page-content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1></h1>
               <br>
               <h2>Add New Product</h2>
               <hr>
               <br>
<div  class="border border-dark">
    <div class="container" >
        <br>
        <div class="form-group">
            <form method="POST">
                <!-- <h1 class="text-center">ADD NEW PRODUCT</h1> -->
                <label>Product Name</label>
                <input type="text" name="productName" class="form-control" required>
    
                <label>Product Description</label>
                <textarea name="productDescription" class="form-control" required></textarea>
    
                <label>Product Type</label>
                <select name="productType" class="form-control" required>
                    <option value="console">Gaming Console</option>
                    <option value="cd">Gaming CD</option>
                </select>
    
                <label>Product Price</label>
                <input type="number" name="productPrice" class="form-control" required>
    
                <label>Posted by</label>
                <input type="text" name="productPostedBy" class="form-control" value="<%= accountID %>" readonly>
    
                <br>
                <div class="text-center">
                    <button class="btn btn-outline-primary btn-lg" type="submit">Add Product</button>
                </div>
            </form>
        </div>
    </div>
</div>
                <!-- <button href="#menu-toggle" class="btn btn-default" id="menu-toggle"> Toggle Menu</button> -->
            </div>
        </div>
    </div>
</div>
<!-- /#page-content-wrapper --> -->

</div> 
<script>
     $('document').ready(function() {
            $('#btn').click(function(){
                alert('Product have been added.Thank you')
            })
        })           
</script>
<script>
$("#menu-toggle").click(function(e) {
e.preventDefault();
$("#wrapper").toggleClass("toggled");
});
</script>

